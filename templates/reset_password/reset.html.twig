{% extends 'security/base.html.twig' %}

{% block title %}{{ parent() }}Reset your password{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header bg-circle-shape bg-shape text-center p-2"><a class="font-sans-serif fw-bolder fs-4 z-1 position-relative link-light" href="../../../index.html" data-bs-theme="light">falcon</a></div>
        <div class="card-body p-4">
            <h3 class="text-center">RÃ©initialiser le mot de passe</h3>
            {% set extra_class = formSubmitted ? ' was-validated' : '' %}

            {{ form_start(resetForm, {'attr': {'class': 'mb-3 needs-validation' ~ extra_class }}) }}

                <div class="mb-3">
                    {{ form_label(resetForm.password.plainPassword.first, null, {
                        'label': 'Nouveau mot de passe',
                        'class': 'form-label'
                    }) }}

                    {{ form_widget(resetForm.password.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(resetForm.password.plainPassword.second, null, {
                        'label': 'Confirmez le mot de passe',
                        'class': 'form-label'
                    }) }}

                    {{ form_widget(resetForm.password.plainPassword.second, {'attr': {'class': 'form-control'}}) }}

                    {% for error in field_errors(resetForm.password.plainPassword.first) %}
                        <div class="mt-3 position-relative invalid-tooltip">{{ error }}</div>
                    {% endfor %}
                </div>
                <button class="btn btn-primary d-block w-100 mt-3" type="submit" name="submit">Enregistrer</button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
