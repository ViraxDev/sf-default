{% extends "security/base.html.twig" %}

{% block title %}
    {{ parent() }} Connexion
{% endblock %}

{% block body %}
    <form method="post">
        <div class="card">
            <div class="card-header bg-circle-shape bg-shape text-center p-2"><a
                        class="font-sans-serif fw-bolder fs-4 z-1 position-relative link-light"
                        href="{{ path('app_login') }}" data-bs-theme="light">falcon</a></div>
            <div class="card-body p-4">
                <div class="row flex-between-center">
                    <div class="col-auto">
                        <h5>Connexion</h5>
                    </div>
                    <div class="col-auto fs--1 text-600"><span
                                class="mb-0 fw-semi-bold">Nouvel utilisateur ?</span> <span><a
                                    href="../../../pages/authentication/split/register.html">Créer un compte</a></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="username">Adresse mail</label>
                    <input id="username" type="email" value="{{ last_username }}" name="_username" class="form-control"
                           autocomplete="email" required autofocus>

                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <label class="form-label" for="password">Mot de passe</label>
                    </div>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password"
                           required>
                </div>

                {% if error %}
                    <div class="d-flex justify-content-between  alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security', 'fr') }}</div>
                {% endif %}

                <div class="row flex-between-center">
                    <div class="col-auto">
                        <div class="form-check mb-0">
                            <input class="form-check-input" type="checkbox" id="split-checkbox" name="_remember_me"/>
                            <label class="form-check-label mb-0" for="split-checkbox">Se souvenir de moi</label>
                        </div>
                    </div>
                    <div class="col-auto"><a class="fs--1"
                                             href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a></div>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div class="mb-3">
                    <button class="btn btn-primary d-block w-100 mt-3" type="submit" name="submit">
                        Log in
                    </button>
                </div>
                <div class="position-relative mt-4">
                    <hr/>
                    <div class="divider-content-center">ou connectez-vous avec</div>
                </div>
                <div class="row g-2 mt-2">
                    <div class="col-sm-6"><a class="btn btn-outline-google-plus btn-sm d-block w-100"
                                             href="#"><span class="fab fa-google-plus-g me-2"
                                                            data-fa-transform="grow-8"></span>
                            google</a></div>
                    <div class="col-sm-6"><a class="btn btn-outline-facebook btn-sm d-block w-100"
                                             href="#"><span class="fab fa-facebook-square me-2"
                                                            data-fa-transform="grow-8"></span> facebook</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
